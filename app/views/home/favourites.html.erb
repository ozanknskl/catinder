<div class="col-md-8 col-md-offset-2">
  <h1 class="text-center inline"> My Favourite Things</h1>
</div>
<div class="col-md-1">
  <h1>
  <button onclick="changeView()" id="change" class="btn btn-default btn-circle btn-lg">
    <i class="glyphicon glyphicon-eye-open "></i>
  </button>
</h1>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="h-divider"></div>
  </div>
</div>
<% if @cats_array.length() > 0 %>
  <div id="grid-view">
    <%= render "cats" %>
  </div>
  <div id="one-view" style="display:none">

    <div id="myCarousel" class="carousel slide" >
      <div class="col-md-2">
        <button onclick="slideLeft()" class="center-block btn btn-xl btn-circle btn-default" style="margin-top: 400px">
          <i class="glyphicon glyphicon-chevron-left"></i>
        </button>
        <span class="sr-only">Previous</span>
      </div>
      <!-- Wrapper for slides -->
      <div class="col-md-8">
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <div class="panel panel-default">
              <%= render partial: 'cats/show' , locals: {cat: @cats_array.first} %>
            </div>
          </div>
          <% @cats_array.each do |cat| %>
            <div class="item">
              <div class="panel panel-default">
                <%= render partial: 'cats/show' , locals: {cat: cat} %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-2">
        <button onclick="slideRight()" class="center-block btn btn-xl btn-circle btn-default" style="margin-top: 400px" >
          <i class="glyphicon glyphicon-chevron-right"></i>
        </button>
        <span class="sr-only">Next</span>
      </div>
    </div>
  </div>
<% else %>
  <h2 class="text-center"> You didn't like any cats yet, go and start liking! </h2>
<% end %>


