<% @cats.each do |cat, index| %>
  <div class="col-md-4 col-md-offset-1">
    <%= link_to cat do %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3> <%= cat.name %> </h3>
        </div>
        <div class="panel-body">
          <img alt="User Pic" src="https://pbs.twimg.com/profile_images/562466745340817408/_nIu8KHX.jpeg" class="img-responsive img-circle ">
        </div>
        <div class="panel-footer">
          <%= cat.location.city_and_country %>
        </div>
      </div>
      </div>
      <div class="col-md-1"> 
    <% end %>
  </div>
<% end %>
