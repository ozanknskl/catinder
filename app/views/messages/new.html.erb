<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>New message to <%= @receiver.full_name %></h2>
    <div class="row">
    <div class="span4 well" >

    <%= form_for @message do |f| %>
      <%= hidden_field_tag 'receiver_id', @receiver.id %>

      <%= f.text_area :body, class:"span4", id:"new_message",placeholder:"Type in your message", rows:"5" %>
      <h6 class="pull-right">320 characters remaining</h6>

      <%= f.submit "Post New Message", class:"btn btn-info"%>
    <% end %>
    </div>
  </div>
  </div>
</div>
