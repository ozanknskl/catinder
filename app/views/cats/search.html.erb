<% if @cats.blank? %>
  <h4 class:"text-center">There are no cats containing the term <%= params[:search] %>.</h4>
<% else %>
  <% @cats.each do |cat| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default cat-panel main-panel" >
              <div class="panel-body cat-panel-body">
                <div class="col-md-6 col-md-offset-3">
                  <img alt="User Pic" src="https://pbs.twimg.com/profile_images/562466745340817408/_nIu8KHX.jpeg" class="cat-picture img-responsive img-circle ">
                </div>
                <div class="col-md-12 text-center">
                  <h2> <%= cat.name  %> </h2>
                  <div class="h-divider">
                  </div>
                  <h3>  <%= cat.cat_type.name %> </h3>
                  <h3>  <%= cat.age.to_s + " - " + cat.show_gender %> </h3>
                  <h3>  <%= cat.location.city_and_country %> </h3>
                </div>
              </div>
            </div>
        </div>
      </div>
  <% end %>
<% end %>
