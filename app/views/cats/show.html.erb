<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><%= @cat.name %></h2>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <img alt="User Picture" src="http://a3.files.biography.com/image/upload/c_fit,cs_srgb,dpr_1.0,h_1200,q_80,w_1200/MTE5NTU2MzE2NDk2OTU0ODkx.jpg" class="img-circle img-responsive">
          </div>
        </div>
        <div class="col-md-3"></div>
        <div class="row text-center">
          <h4> <label>Type: </label> <%= @cat.cat_type.name %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Gender: </label> <%= @cat.show_gender %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Location: </label> <%= @cat.location.city_and_country %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Age: </label> <%= @cat.age %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Color: </label> <%= @cat.color %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Owner: </label> <%= @cat.user.username %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Hyperactivity: </label> <%= @cat.show_hyperactivity %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>Health: </label> <%= @cat.show_health %> </h4>
        </div>
        <div class="row text-center">
          <h4> <label>About: </label> <%= @cat.about %> </h4>
        </div>
      </div>
      <div class="panel-footer text-center">
        <img alt="Fire Emoji" src="http://emojipedia-us.s3.amazonaws.com/cache/a8/1c/a81c380b4066b24f707d6d52c0270bd0.png">
        <%= link_to 'Start a chat with this cat' ,'/' , class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
