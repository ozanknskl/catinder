<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <%= render partial: 'show', locals: {cat: @cat} %>
      <div class="panel-footer panel-footer-showcat text-center">
        <% if !current_user.cats.include?(@cat) %>
          <div class="col-md-6 col-xs-6 text-center">
          <%= link_to dislike_cat_path(@cat), class: "btn btn-danger btn-circle btn-xl center-block" do %>
            <i class="glyphicon glyphicon-remove", style="top : 13px"></i>
          <% end %>
          </div>
          <div class="col-md-6 col-xs-6 text-center">
            <%= link_to like_cat_path(@cat) , class: 'btn btn-success btn-circle btn-xl center-block' do %>
              <i class="glyphicon glyphicon-heart", style="top : 13px"></i>
            <% end %>
          </div>
        <% elsif %>
          <%= link_to  edit_cat_path , class: "btn btn-warning btn-circle btn-xl"  do%>
            <h4> Edit </h4>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
