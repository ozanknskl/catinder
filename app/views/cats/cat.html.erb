<div class="row">
  <div class="col-md-3"> </div>
  <div class=" col-md-6">
    <%#= link_to @new_cat , class: "cat-panel-link "  do %>
    <div class="panel panel-default cat-panel main-panel center-block" >
    <!-- <div class="panel-heading">
      <h3 class="panel-title"><%#= cat.name + " - " + cat.location.city_and_country %></h3>
    </div> -->
      <div class="panel-body cat-panel-body">
        <div class="col-md-6 col-md-offset-3">
          <% if @new_cat.image_file_name %>
            <%= image_tag @new_cat.image.url(:medium) , class: "object-fit_contain_medium cat-picture img-circle"%>
          <% elsif %>
            <img alt="User Pic" src="https://pbs.twimg.com/profile_images/562466745340817408/_nIu8KHX.jpeg" class="cat-picture img-responsive img-circle ">
          <% end %>
        </div>
        <div class="col-md-12">
          <div class="col-md-3 col-xs-3">
            <%= link_to dislike_cat_path(@new_cat), class: "btn btn-danger btn-circle btn-xl center-block" do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %>
          </div>
          <div class="col-md-6 col-xs-6 text-center">
            <h2> <%= @new_cat.name  %> </h2>
          </div>
          <div class="col-md-3 col-xs-3">
            <%= link_to like_cat_path(@new_cat) , class: 'btn btn-success btn-circle btn-xl center-block' do %>
              <i class="glyphicon glyphicon-heart"></i>
            <% end %>
          </div>
        </div>
        <div class="col-md-12 col-xs-12 text-center">
          <div class="h-divider"></div>
          <h3>  <%= @new_cat.cat_type.name %>   </h3>
          <h3>  <%= @new_cat.age.to_s + " - " + @new_cat.gender %> </h3>
          <h3>  <%= @new_cat.location.city_and_country %> </h3>
        </div>
      </div>
        <!-- <div class="panel-footer cat-panel-footer text-center">
            <%#= link_to 'See Profile' , cat , class: "btn btn-warning btn-lg" %>
        </div> -->
    </div>
  <%# end %>
 </div>
</div>
